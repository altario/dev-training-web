{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "app/*": ["app/*"],
      "shared/*": ["app/shared/*"],
      "assets/*": ["assets/*"],
      "environment": ["environments/environment"]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
